---
import "../styles/style.css";
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/ux_favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Join us at UX Copenhagen Conference, where industry leaders and UX experts gather to explore the latest trends, innovations, and best practices in user experience design. Discover actionable insights to enhance your UX strategies and create exceptional digital experiences."
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
